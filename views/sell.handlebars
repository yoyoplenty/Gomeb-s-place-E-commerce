<div class="container mt-5 pt-5">
    <h1 class="langar text-left text-light"><b>SELL LIKE A KING</b></h1>
    <form action="/sell" class="mt-3" method="POST" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <select class="custom-select" name="categories" id="inputGroupSelect04"
                aria-label="Example select with button addon">
                <option selected>categories</option>
                <option value="properties">Properties</option>
                <option value="vehicles">Vehicles</option>
                <option value="mobile&tablets">Mobile & Tablets</option>
                <option value="fashion">Fashion</option>
                <option value="health&beauty">Health & Beauty</option>
                <option value="agriculture&food">Agriculture & Foods</option>
                <option value="electronics">Electronics</option>
                <option value="animal&pets">Animal & Pets</option>
                <option value="sports">Sports</option>
                <option value="babies">Babies</option>
                <option value="gadgets">Gadgets</option>
            </select>
            <div class="input-group-append">
                <button class="btn orange" type="submit">Select</button>
            </div>
        </div>
        <p class="text-dark langar"><b>Please fill in same category as earlier</b></p>

        <div class="form-group">
            <label for="seller" class="text-light"><b>Seller</b></label>
            <input type="text" name="seller" class="form-control" id="seller" required>
        </div>

        <div class="form-group">
            <label for="title" class="text-light"><b>title</b></label>
            <input type="text" name="title" class="form-control" id="title" required>
        </div>

        <div class="form-group">
            <label for="image" class="text-light"><b>Upload Image</b></label>
            <input type="file" name="file" class="form-control" id="file">
        </div>

        <div class="form-group">
            <label for="description" class="text-light"><b>Description</b></label>
            <textarea name="description" class="form-control" id="tiny" required></textarea>
        </div>

        <div class="form-group">
            <label for="price" class="text-light"><b>Price</b></label>
            <input type="text" name="price" class="form-control" id="price" required>
        </div>

        <input type="submit" class="btn orange text-light"></input>
    </form>
</div>